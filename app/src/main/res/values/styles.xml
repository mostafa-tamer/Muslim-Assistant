<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="prayer_times">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_layout_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nav_drawer_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progress_bar">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">end|top</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ColorPrimaryWhite" parent="@style/Theme.MaterialComponents">

    </style>

    <style name="ripple_style">
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleDuration">0</item>
        <item name="mrl_rippleColor">@color/gray</item>
    </style>

    <style name="widget_prayer_times_text_view_first_Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
<!--        <item name="android:paddingBottom">8dp</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:hint">00:00</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="widget_prayer_times_text_view_second_row">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">8dp</item>
<!--        <item name="android:paddingTop">8dp</item>-->
        <item name="android:hint">00:00\nam</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MyTimePickerDark" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">#FF5722</item>
        <item name="android:numbersTextColor">#673AB7</item>
        <item name="android:numbersSelectorColor">#FFEB3B</item>
        <item name="android:numbersBackgroundColor">#61E761</item>
        <item name="android:background">#FFC107</item>
    </style>
</resources>